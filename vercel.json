{
  "$schema": "https://openapi.vercel.sh/vercel.json",
  "version": 2,
  "buildCommand": "npm run build",
  "installCommand": "npm install --no-audit --no-fund --legacy-peer-deps",
  "framework": "nextjs",
  "github": {
    "silent": true
  },
  "functions": {
    "app/api/**/*": {
      "maxDuration": 60
    }
  },
  "crons": [
    {
      "path": "/api/cron/daily-snapshot",
      "schedule": "0 1 * * *"
    }
  ]
} 